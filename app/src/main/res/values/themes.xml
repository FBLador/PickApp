<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PickApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/transparent</item> <!-- colore toolbar -->
        <item name="colorPrimaryVariant">@color/white</item> <!-- colore status bar -->
        <item name="colorOnPrimary">@color/white</item> <!-- colore testo bottoni e colore click selezione  -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainGreen</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <!-- <item name="android:statusBarColor">@color/black</item>  per cambiare colore testo status bar-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- setti di avere lo sfondo chiaro, quindi testo status bar grigio-->
    </style>

    <style name="Theme.PickApp.Fullscreen" parent="Theme.PickApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.PickApp.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.PickApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mainGreen</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PickApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PickApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PickApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DateDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorOnPrimary">@color/teal_700</item>
    </style>

    <style name="TimePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorOnPrimary">@color/teal_700</item>
    </style>

</resources>